<Page
	x:Class="kic.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<StackPanel>
		<StackPanel>
			<TextBlock Text="Keyboard-Input-Controll" FontSize="80" HorizontalAlignment="Center" />
		</StackPanel>

		<!-- Define the rows for each key-value pair in the dictionary -->
		<ItemsControl ItemsSource="{Binding MyDictionary}" Margin="0,80,0,0">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<Grid HorizontalAlignment="Center">
						<Grid.ColumnDefinitions>
							<ColumnDefinition />
							<ColumnDefinition />
						</Grid.ColumnDefinitions>

						<TextBlock Grid.Column="0" Text="{Binding Key}" FontSize="16" Margin="5" />
						<TextBlock Grid.Column="1" Text="{Binding Value}" FontSize="16" Margin="5" />
					</Grid>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</StackPanel>
</Page>